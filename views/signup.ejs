<%- include  ('./partials/header.ejs') %>

    <div id="main" class="bg-black/35 w-full min-h-screen flex items-center justify-center">
        <!-- Form container -->
        <div class="bg-white p-8 px-16 rounded-3xl shadow-lg w-full max-w-md relative">
            <a href="/" class="absolute w-10 p-3 right-5 top-5 flex items-center justify-center rounded-full hover:bg-gray-200">
              <img class="w-full object-cover" src="/images/close.png" alt="">
            </a>
            <div class="pin-logo flex justify-center mb-4">
                <div class="text-red-500 w-12 text-5xl font-bold">
                    <img class="h-full w-full object-cover" src="/images/pinterest-logo.png" alt="">
                </div>
            </div>
            <h1 class="heading text-center text-2xl font-bold text-gray-800 mb-6">Welcome to Pinterest</h1>

            <!-- Form starts here -->
            <form class="main-form" action="users/register" method="POST">
                <div class="mb-4">
                    <input type="text" id="full_name" name="fullname" placeholder="Full Name"
                        class="w-full px-4 py-2 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-red-400"
                        required>
                </div>
                <div class="mb-4">
                    <input type="email" id="email" name="email" placeholder="Email"
                        class="w-full px-4 py-2 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-red-400"
                        required>
                </div>

                <div class="mb-4">
                    <input type="password" id="password" name="password" placeholder="password" a
                        class="w-full px-4 py-2 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-red-400"
                        required>
                </div>

                <!-- Register button -->
                <button type="submit"
                    class="w-full bg-red-500 text-white font-bold py-2 rounded-full hover:bg-red-600 transition duration-300">Register
                    Account</button>
            </form>

            <!-- Divider -->
            <div class="my-4 flex items-center justify-center">
                <div class="border-b w-1/3"></div>
                <span class="text-gray-500 mx-4">OR</span>
                <div class="border-b w-1/3"></div>
            </div>

            <!-- Social media login buttons -->
            <div class="flex flex-col space-y-2">
                <button
                    class="flex items-center justify-center bg-blue-600 text-white py-2 rounded-full hover:bg-blue-700 transition duration-300">
                    Continue with Facebook
                </button>
                <button
                    class="flex items-center justify-center bg-gray-100 text-black py-2 rounded-full hover:bg-gray-200 transition duration-300">
                    Continue with Google
                </button>
            </div>

            <!-- Terms of Service -->
            <p class="mt-2 text-xs text-gray-500 text-center">By continuing, you agree to Pinterest's <a href="#"
                    class="text-red-500 hover:underline">Terms of Service</a> and <a href="#"
                    class="text-red-500 hover:underline">Privacy Policy</a>.</p>

            <!-- Sign-up link -->
            <p class="mt-3 text-center text-gray-700">Already a member? <a href="/login"
                    class="font-medium text-black hover:underline">Log in</a></p>
        </div>
    </div>
<%- include  ('./partials/footer.ejs') %>

